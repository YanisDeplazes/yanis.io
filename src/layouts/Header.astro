---
import Wrapper from '../layouts/Wrapper.astro';

import Logo from '../components/header/Logo.astro';
import Navigation from '../components/header/Navigation.astro';
---

<header>
  <Wrapper>
    <div class="container">
      <Logo />
      <Navigation />
    </div>
  </Wrapper>
  <div class="fade"></div>
</header>

<style lang="scss">
  header {
    width: 100vw;
    position: fixed;
    z-index: 10;
    height: auto;
    background-color: var(--color-project);
    border-bottom: 5px solid var(--color-project);

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: var(--space-2xs) 0px;
      gap: var(--space-m);
    }
    &::after {
      content: '';
      width: 100%;
      height: 1px;
      bottom: 0;
      left: 0;
      position: absolute;
      background-color: var(--color-primary);
    }
  }
</style>
