---
import Wrapper from '../../layouts/Wrapper.astro';
import { Image } from 'astro:assets';

import image from '../../assets/images/default.png';

const section = {
  title: "Hi I'm Yanis",
  description:
    'Blending computer science and design as a creative coder to turn ideas into reality. Currently studying Digital Ideation at HSLU. Also often behind the lens, mostly shooting film photography.',
  image: '/default.png',
  imageAlt: 'me',
};
---

<section class="about">
  <Wrapper>
    <div class="container border radius">
      <div class="text">
        <div class="title">
          <h2 class="fahkwang-bold font-size-3">{section.title}</h2>
        </div>
        <p class="font-size-p color-light">{section.description}</p>
      </div>
      <div class="image">
        <Image src={image} alt={section.imageAlt} format="webp" />
      </div>
    </div>
  </Wrapper>
</section>

<style lang="scss">
  .about {
    .container {
      padding: var(--padding-inner);
      overflow: hidden;
      $breakpoint-tablet: 768px;

      @media (min-width: $breakpoint-tablet) {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-2xl);
        padding-right: 0;
        padding-top: 0;
        padding-bottom: 0;
      }

      .text {
        width: 100%;
      }

      .image {
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        @media (min-width: $breakpoint-tablet) {
          max-width: calc(100% / 3);
        }
      }
    }
  }
</style>
