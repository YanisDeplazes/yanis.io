---
// src/components/GalleryImage.astro
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
}
const { src, alt, caption } = Astro.props;
---

<figure>
  <Image src={src} alt={alt} format="webp" loading="lazy" />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style lang="scss">
  figure {
    margin-block-start: 0px;
    margin-block-end: 0px;
    margin: 0;
    cursor: zoom-in;

    img {
      width: 100%;
      height: 100%;
      transition: all 1.5s ease-in-out;
    }

    figcaption {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0 0 0 0);
      white-space: nowrap;
      border: 0;
    }
  }
</style>
